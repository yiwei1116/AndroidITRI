<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FeedbackFragment"
    android:background="@android:color/white"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="15dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_feedback_close"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_feedback_title"
        android:text="@string/feedback_title_1"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/btn_feedback_close"
        android:paddingBottom="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:id="@+id/horizontal_line"
        android:background="@color/btn_font_color_grey"
        android:layout_below="@+id/txt_feedback_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_feedback_question"
        android:text="@string/feedback_question_1"
        android:textColor="@android:color/black"
        android:layout_below="@+id/horizontal_line"
        android:textSize="22sp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_feedback_question">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">





        </FrameLayout>

    </ScrollView>



</RelativeLayout>
