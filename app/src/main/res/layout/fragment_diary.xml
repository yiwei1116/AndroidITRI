<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    tools:context=".fragment.DiaryFragment">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/camera"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_diaryhome"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/title_chinese"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="140dp"
        />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:id="@+id/next_step"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal|bottom" />


        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/photo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:text=""
        android:background = "@drawable/btn_library"
        android:layout_gravity="center"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="280dp"
               />
    <Button
        android:id="@+id/camera"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:text=""
        android:background = "@drawable/btn_camera"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="280dp"
        android:layout_gravity="center"

        />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Diarycamera"
            android:text="相機"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="320dp"
            android:elevation="25dp"

            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Diaryphoto"
        android:text="相簿"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="320dp"
        android:elevation="25dp"

        />


</RelativeLayout>


</FrameLayout>
