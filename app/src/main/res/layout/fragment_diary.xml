<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    tools:context=".fragment.DiaryFragment">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="463dp"
        android:layout_above="@+id/camera"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_diaryhome"/>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:id="@+id/next_step"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal|bottom" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/camera"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text=""
        android:background = "@drawable/btn_camera"
        android:layout_marginLeft="77dp"
        android:layout_gravity="left|center_vertical"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/Diarycamera" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Diarycamera"
        android:text="相機"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"


        android:layout_alignBottom="@+id/camera"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <Button
        android:id="@+id/photo"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text=""
        android:background = "@drawable/btn_library"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_below="@+id/img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</FrameLayout>
